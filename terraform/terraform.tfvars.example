# Terraform Variables Template
# Copy this file to terraform.tfvars and fill in your values
# Never commit terraform.tfvars to version control!

# GCP Project Configuration
project_id = "your-gcp-project-id"
region     = "us-east1"  # Free tier eligible
zone       = "us-east1-b"
env        = "prod"

# Container Images (update after building)
nextjs_image     = "us-east1-docker.pkg.dev/your-project-id/threads-nextjs/nextjs:latest"
ml_service_image = "us-east1-docker.pkg.dev/your-project-id/threads-nextjs/ml-service:latest"

# Database Credentials (generate strong passwords)
postgres_password         = "CHANGE_ME_STRONG_PASSWORD"
dagster_postgres_password = "CHANGE_ME_STRONG_PASSWORD"

# NextAuth Configuration
nextauth_secret = "CHANGE_ME_RANDOM_STRING_32_CHARS"  # openssl rand -base64 32
nextauth_url    = "https://your-cloudrun-url.run.app"  # Update after deployment

# Google OAuth (get from Google Cloud Console)
google_client_id     = "your-google-client-id.apps.googleusercontent.com"
google_client_secret = "CHANGE_ME_GOOGLE_SECRET"

# GitHub OAuth (get from GitHub Settings > Developer settings)
github_client_id     = "your-github-client-id"
github_client_secret = "CHANGE_ME_GITHUB_SECRET"

# GCP Service Account Key for ArgoCD Image Updater
# Path to JSON key file for Artifact Registry access
gcp_service_account_key = "~/.gcloud/keys/github-actions-artifact-registry-push.json"

# VM Snapshot Configuration
# Option 1: Use specific snapshot
# snapshot_name = "projects/your-project-id/global/snapshots/snapshot-k0s"
# use_latest_snapshot = false

# Option 2: Auto-detect latest snapshot (requires snapshots to have labels: component=k0s-cluster, environment=prod)
# snapshot_name = ""
# use_latest_snapshot = true

# Option 3: Use base Debian image (no snapshot)
snapshot_name = ""
use_latest_snapshot = false
